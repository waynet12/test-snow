{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "baseUrl": "./",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}